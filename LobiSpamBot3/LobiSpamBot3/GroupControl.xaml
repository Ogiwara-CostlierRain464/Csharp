<UserControl x:Class="LobiSpamBot3.GroupControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LobiSpamBot3"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300" Margin="10">
    <Grid>
        <Border CornerRadius="10" Background="White">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" Color="#FFC6BEBE" BlurRadius="2"/>
            </Border.Effect>
            <Button x:Name="GroupButton" Background="White" BorderBrush="White" Click="GroupButton_Click">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal" Width="300">
                            <Image Height="70" Width="70" Source="Resources/people.png" x:Name="GroupIcon" Margin="20,0,0,0"/>
                            <TextBlock FontSize="15" Text="TestGroup" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="GroupName" Margin="20,0,0,0"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
        </Border>
    </Grid>
</UserControl>
